<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <!-- fill the shap with shadow color -->
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/todo_item_shadow" />
            <solid android:color="@color/todo_item_shadow" />
        </shape>
    </item>

    <!-- overdraw actual background color on all but shadow -->
    <item
        android:left="@dimen/todo_item_border_left"
        android:top="@dimen/todo_item_border_top"
        android:right="@dimen/todo_item_border_right"
        android:bottom="@dimen/todo_item_border_bottom">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/todo_item_background" />
            <solid android:color="@color/todo_item_background" />
        </shape>
    </item>
</layer-list>
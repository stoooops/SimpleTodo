<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <!-- fill the shap with shadow color -->
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/todo_item_shadow" />
            <solid android:color="@color/todo_item_shadow" />
        </shape>
    </item>

    <!-- overdraw actual background color on all but bottom 1dp -->
    <item android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/todo_item" />
            <solid android:color="@color/todo_item" />
        </shape>
    </item>
</layer-list>